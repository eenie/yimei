<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小鸡炖蘑菇"
                android:id="@+id/textFoodName"
                android:padding="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/foodPic"
                android:src="@drawable/takeout_img_default"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月售：100份"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格：￥8.00元"
                    android:id="@+id/textFoodPrice"
                    android:layout_marginBottom="5dp"
                    android:textColor="#e43535"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="-"
                        android:id="@+id/btnSub"
                        android:background="@drawable/shape_btn_sub"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:maxLength="3"
                        android:text="0"
                        android:id="@+id/textCount"
                        android:gravity="center"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="+"
                        android:id="@+id/btnPlus"
                        android:background="@drawable/shape_btn_plus"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"
                android:drawableTop="@drawable/ding_not_clicked"
                android:layout_weight="1"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"
                android:drawableTop="@drawable/forward"
                android:layout_weight="1"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/textView9"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"
                android:drawableTop="@drawable/commend"
                android:layout_weight="1"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/textView10"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>