<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.neusoft.eenie.order.controller.main.OrderInfoActivity"
    android:background="#f5f5f5">

    <include layout="@layout/toolbar_top_menu"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="菜品列表"
            android:id="@+id/textView12"/>

        <ListView
            android:id="@+id/foodListInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView17"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_poite_green"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="合计"
            android:id="@+id/textView15"
            android:textColor="#FC4D3D"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥8.00"
            android:id="@+id/textTotal"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#FC4D3D"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即付款"
        android:id="@+id/btnPay"
        android:textColor="#f5f5f5"
        android:background="#FC4D3D"/>

</LinearLayout>
